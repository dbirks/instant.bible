<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/ib_card"
    android:orientation="vertical">

    <TextView
        android:id="@+id/verse_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ibText"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/verse_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ibText"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:text="For God so loved the world, that he gave his only begotten Son, that whosoever believeth in him should not perish, but have everlasting life." />

    <LinearLayout
        android:id="@+id/translations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />
</LinearLayout>
