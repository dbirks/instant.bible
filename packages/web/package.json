{
  "name": "@instantbible/web",
  "private": true,
  "description": "The instant.bible web interface",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:storybook": "build-storybook",
    "build:webpack": "cross-env TS_NODE_PROJECT=./tsconfig.webpack.json NODE_ENV=production webpack --mode production",
    "dev": "cross-env TS_NODE_PROJECT=./tsconfig.webpack.json NODE_ENV=development webpack-dev-server",
    "storybook": "start-storybook -p 6006",
    "check": "npm-run-all check:*",
    "check:lint": "eslint --ext .ts,.tsx,.js,.jsx src",
    "check:ts": "tsc --noEmit",
    "check:test": "npm run test",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "transform": {
      "\\.[tj]sx?$": "babel-jest"
    },
    "testRegex": "\\.test\\.tsx?$",
    "setupFilesAfterEnv": [
      "./src/opt/setup-jest.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "author": "Kenneth Powers <ken@kenpowers.net> https://knpw.rs",
  "license": "MIT",
  "dependencies": {
    "@emotion/core": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "@hot-loader/react-dom": "^16.11.0",
    "lodash": "^4.17.15",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "sanitize.css": "^11.0.0",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@svgr/webpack": "^5.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/jest": "^24.0.24",
    "@types/jest-axe": "^3.2.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/webpack": "^4.41.0",
    "@types/webpack-dev-server": "^3.9.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-emotion": "^10.0.27",
    "babel-plugin-lodash": "^3.3.4",
    "cross-env": "^6.0.3",
    "css-loader": "^3.4.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.9.0",
    "jest-axe": "^3.2.0",
    "node": "^13.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react-hot-loader": "^4.12.18",
    "style-loader": "^1.1.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "webpack": "^4.41.4",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }
}
